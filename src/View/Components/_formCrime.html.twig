<form class="formcrime" action="" method="post">
    <div>

        <label for="name">Nom :</label>
        <input type="text" required="required"value="{{crimeScene.name}}" name="name">
    </div>
    <div>
        <label for="title">Nom de la scène de crime :</label>
        <input type="text" required="required" value="{{crimeScene.title}}" name="title">
    </div>
    <div>
        <label for="adress">Adresse :</label>
        <input type="text" required="required" value="{{crimeScene.adress}}" name="adress">
    </div>
    <div>
        <label for="date">Date :</label>
        <input type="date" required="required" value="{{crimeScene.date}}" name="date">
    </div>
    <div>
        <label for="victim">Victime :</label>
        <input type="text" required="required" value="{{crimeScene.victim}}" name="victim">
    </div>
    <div>
        <label for="description">Description :</label>
        <textarea id="description" required="required" value="{{crimeScene.description}}" name="description"></textarea>
    </div>
    
    <button class="submit-form" type="submit" value="Submit">Ajouter le crime</button>
    <input type="hidden" value="{{ crimeScene.id }}" name="id">
    <a class="link-home" href="/">Accueil</a>
</form>
